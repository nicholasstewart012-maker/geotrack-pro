{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "node",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        /* Type roots */
        "typeRoots": [
            "./node_modules/@types",
            "../node_modules/@types"
        ],
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src",
        "src/**/*.ts",
        "src/**/*.tsx",
        "vite.config.ts",
        "tailwind.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}